<h1>Update Job Status:</h1>

<%= form_for(@application) do |f| %>
    <% if @application.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@application.errors.count, "error") %> prohibited this job from being saved:</h2>

          <ul>
            <% @application.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :status, "Select status:" %><br>
      <%= f.select :status,
          options_for_select([["Pending","Pending"],["Not a fit","Not a fit"],["Schedule Interview","Schedule Interview"]],@job_status)
      %>
      <br><br>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>

<% end %>


